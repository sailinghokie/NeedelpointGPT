import React, { useState } from 'react';
import { Search, Copy, Check, Book, Code } from 'lucide-react';

export default function ThreadAPI() {
  const [brand, setBrand] = useState('');
  const [color, setColor] = useState('');
  const [searching, setSearching] = useState(false);
  const [apiResponse, setApiResponse] = useState(null);
  const [copied, setCopied] = useState(false);
  const [showDocs, setShowDocs] = useState(true);

  const brands = [
    'Essentials',
    'Silk & Ivory',
    'Brown Paper Packages',
    'Silk Lame Braid'
  ];

  const searchThread = async (brandName, colorQuery) => {
    const searchQuery = `${brandName} ${colorQuery} needlepoint thread site:kcneedlepoint.com`;

    try {
      const response = await fetch('https://api.anthropic.com/v1/messages', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          model: 'claude-sonnet-4-20250514',
          max_tokens: 4000,
          messages: [{
            role: 'user',
            content: `Search for: "${searchQuery}". 

Extract product information and return ONLY valid JSON (no markdown, no preamble):
{
  "success": true,
  "query": {
    "brand": "${brandName}",
    "color": "${colorQuery}"
  },
  "thread": {
    "brandName": "exact brand name",
    "productName": "full product name with color",
    "colorNumber": "color number if available",
    "colorName": "color name if available",
    "sku": "SKU",
    "productCode": "product code",
    "fiberType": "fiber composition",
    "amount": "yardage/weight",
    "price": "price",
    "link": "full product URL",
    "imageUrl": "direct image URL"
  }
}

If not found, return:
{
  "success": false,
  "query": {"brand": "${brandName}", "color": "${colorQuery}"},
  "error": "Thread not found",
  "thread": null
}`
          }],
          tools: [{
            type: "web_search_20250305",
            name: "web_search"
          }]
        })
      });

      const data = await response.json();
      
      let resultText = '';
      if (data.content) {
        for (const block of data.content) {
          if (block.type === 'text') {
            resultText += block.text;
          }
        }
      }

      const cleanText = resultText
        .replace(/```json\n?/g, '')
        .replace(/```\n?/g, '')
        .trim();

      return JSON.parse(cleanText);
    } catch (err) {
      return {
        success: false,
        query: { brand: brandName, color: colorQuery },
        error: err.message,
        thread: null
      };
    }
  };

  const handleSearch = async () => {
    if (!brand || !color) {
      setApiResponse({
        success: false,
        error: 'Brand and color are required',
        query: { brand, color },
        thread: null
      });
      return;
    }

    setSearching(true);
    const result = await searchThread(brand, color);
    setApiResponse(result);
    setSearching(false);
  };

  const copyToClipboard = (text) => {
    navigator.clipboard.writeText(text);
    setCopied(true);
    setTimeout(() => setCopied(false), 2000);
  };

  const exampleCurlCommand = `curl -X POST https://your-api-endpoint.com/api/thread \\
  -H "Content-Type: application/json" \\
  -d '{
    "brand": "Silk & Ivory",
    "color": "001"
  }'`;

  const exampleJavaScript = `// JavaScript/Node.js
const response = await fetch('https://your-api-endpoint.com/api/thread', {
  method: 'POST',
  headers: { 'Content-Type': 'application/json' },
  body: JSON.stringify({
    brand: 'Silk & Ivory',
    color: '001'
  })
});
const data = await response.json();`;

  const examplePython = `# Python
import requests

response = requests.post(
    'https://your-api-endpoint.com/api/thread',
    json={
        'brand': 'Silk & Ivory',
        'color': '001'
    }
)
data = response.json()`;

  return (
    <div className="min-h-screen bg-gradient-to-br from-indigo-50 to-purple-50 p-6">
      <div className="max-w-6xl mx-auto">
        <div className="flex items-center justify-between mb-6">
          <div>
            <h1 className="text-4xl font-bold text-indigo-900 mb-2">Needlepoint Thread API</h1>
            <p className="text-indigo-700">Query threads by brand and color number/name</p>
          </div>
          <button
            onClick={() => setShowDocs(!showDocs)}
            className="flex items-center gap-2 px-4 py-2 bg-white rounded-lg shadow hover:shadow-md transition"
          >
            <Book size={20} />
            {showDocs ? 'Hide Docs' : 'Show Docs'}
          </button>
        </div>

        {/* API Documentation */}
        {showDocs && (
          <div className="bg-white rounded-lg shadow-lg p-6 mb-6">
            <h2 className="text-2xl font-bold text-gray-800 mb-4 flex items-center gap-2">
              <Code size={24} />
              API Documentation
            </h2>
            
            <div className="space-y-4">
              <div>
                <h3 className="font-bold text-lg text-gray-900 mb-2">Endpoint</h3>
                <div className="bg-gray-100 p-3 rounded font-mono text-sm">
                  POST /api/thread
                </div>
              </div>

              <div>
                <h3 className="font-bold text-lg text-gray-900 mb-2">Request Body</h3>
                <pre className="bg-gray-100 p-3 rounded font-mono text-sm overflow-x-auto">
{`{
  "brand": "Silk & Ivory",
  "color": "001"
}`}
                </pre>
              </div>

              <div>
                <h3 className="font-bold text-lg text-gray-900 mb-2">Supported Brands</h3>
                <div className="flex flex-wrap gap-2">
                  {brands.map(b => (
                    <span key={b} className="px-3 py-1 bg-indigo-100 text-indigo-800 rounded-full text-sm">
                      {b}
                    </span>
                  ))}
                </div>
              </div>

              <div>
                <h3 className="font-bold text-lg text-gray-900 mb-2">Response Format</h3>
                <pre className="bg-gray-100 p-3 rounded font-mono text-sm overflow-x-auto">
{`{
  "success": true,
  "query": {
    "brand": "Silk & Ivory",
    "color": "001"
  },
  "thread": {
    "brandName": "Silk & Ivory",
    "productName": "Silk & Ivory 001 White",
    "colorNumber": "001",
    "colorName": "White",
    "sku": "SI001",
    "productCode": "001",
    "fiberType": "50% Silk, 50% Merino Wool",
    "amount": "18 yards",
    "price": "$12.50",
    "link": "https://...",
    "imageUrl": "https://..."
  }
}`}
                </pre>
              </div>

              <div>
                <h3 className="font-bold text-lg text-gray-900 mb-2">Example: cURL</h3>
                <div className="relative">
                  <pre className="bg-gray-900 text-green-400 p-4 rounded font-mono text-sm overflow-x-auto">
{exampleCurlCommand}
                  </pre>
                  <button
                    onClick={() => copyToClipboard(exampleCurlCommand)}
                    className="absolute top-2 right-2 p-2 bg-gray-800 hover:bg-gray-700 rounded text-white"
                  >
                    {copied ? <Check size={16} /> : <Copy size={16} />}
                  </button>
                </div>
              </div>

              <div>
                <h3 className="font-bold text-lg text-gray-900 mb-2">Example: JavaScript</h3>
                <div className="relative">
                  <pre className="bg-gray-900 text-green-400 p-4 rounded font-mono text-sm overflow-x-auto">
{exampleJavaScript}
                  </pre>
                  <button
                    onClick={() => copyToClipboard(exampleJavaScript)}
                    className="absolute top-2 right-2 p-2 bg-gray-800 hover:bg-gray-700 rounded text-white"
                  >
                    {copied ? <Check size={16} /> : <Copy size={16} />}
                  </button>
                </div>
              </div>

              <div>
                <h3 className="font-bold text-lg text-gray-900 mb-2">Example: Python</h3>
                <div className="relative">
                  <pre className="bg-gray-900 text-green-400 p-4 rounded font-mono text-sm overflow-x-auto">
{examplePython}
                  </pre>
                  <button
                    onClick={() => copyToClipboard(examplePython)}
                    className="absolute top-2 right-2 p-2 bg-gray-800 hover:bg-gray-700 rounded text-white"
                  >
                    {copied ? <Check size={16} /> : <Copy size={16} />}
                  </button>
                </div>
              </div>
            </div>
          </div>
        )}

        {/* API Test Interface */}
        <div className="bg-white rounded-lg shadow-lg p-6 mb-6">
          <h2 className="text-2xl font-bold text-gray-800 mb-4">Test API</h2>
          
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Brand *
              </label>
              <select
                value={brand}
                onChange={(e) => setBrand(e.target.value)}
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
              >
                <option value="">Select a brand</option>
                {brands.map(b => (
                  <option key={b} value={b}>{b}</option>
                ))}
              </select>
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Color Number or Name *
              </label>
              <input
                type="text"
                value={color}
                onChange={(e) => setColor(e.target.value)}
                onKeyPress={(e) => e.key === 'Enter' && handleSearch()}
                placeholder="e.g., '001' or 'White'"
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
              />
            </div>
          </div>

          <button
            onClick={handleSearch}
            disabled={searching}
            className="w-full bg-indigo-600 text-white py-3 rounded-lg hover:bg-indigo-700 disabled:bg-gray-400 flex items-center justify-center gap-2 font-medium"
          >
            <Search size={20} />
            {searching ? 'Searching...' : 'Search Thread'}
          </button>
        </div>

        {/* API Response */}
        {apiResponse && (
          <div className="bg-white rounded-lg shadow-lg p-6">
            <div className="flex justify-between items-center mb-4">
              <h2 className="text-2xl font-bold text-gray-800">API Response</h2>
              <button
                onClick={() => copyToClipboard(JSON.stringify(apiResponse, null, 2))}
                className="flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm"
              >
                {copied ? <Check size={16} /> : <Copy size={16} />}
                Copy JSON
              </button>
            </div>

            {/* Visual Preview */}
            {apiResponse.success && apiResponse.thread && (
              <div className="mb-4 p-4 border border-gray-200 rounded-lg bg-gray-50">
                <h3 className="font-bold text-lg mb-3">Visual Preview</h3>
                <div className="flex gap-4">
                  {apiResponse.thread.imageUrl && (
                    <img 
                      src={apiResponse.thread.imageUrl}
                      alt={apiResponse.thread.productName}
                      className="w-32 h-32 object-cover rounded-lg shadow"
                      onError={(e) => e.target.style.display = 'none'}
                    />
                  )}
                  <div className="flex-1">
                    <h4 className="text-xl font-bold text-gray-900">{apiResponse.thread.brandName}</h4>
                    <p className="text-lg text-gray-700 mb-2">{apiResponse.thread.productName}</p>
                    <div className="grid grid-cols-2 gap-2 text-sm">
                      {apiResponse.thread.colorNumber && (
                        <p><strong>Color #:</strong> {apiResponse.thread.colorNumber}</p>
                      )}
                      {apiResponse.thread.colorName && (
                        <p><strong>Color Name:</strong> {apiResponse.thread.colorName}</p>
                      )}
                      {apiResponse.thread.sku && (
                        <p><strong>SKU:</strong> {apiResponse.thread.sku}</p>
                      )}
                      {apiResponse.thread.productCode && (
                        <p><strong>Code:</strong> {apiResponse.thread.productCode}</p>
                      )}
                      {apiResponse.thread.fiberType && (
                        <p><strong>Fiber:</strong> {apiResponse.thread.fiberType}</p>
                      )}
                      {apiResponse.thread.amount && (
                        <p><strong>Amount:</strong> {apiResponse.thread.amount}</p>
                      )}
                      {apiResponse.thread.price && (
                        <p><strong>Price:</strong> {apiResponse.thread.price}</p>
                      )}
                    </div>
                    {apiResponse.thread.link && (
                      <a
                        href={apiResponse.thread.link}
                        target="_blank"
                        rel="noopener noreferrer"
                        className="inline-block mt-2 text-indigo-600 hover:text-indigo-800 font-medium"
                      >
                        View Product â†’
                      </a>
                    )}
                  </div>
                </div>
              </div>
            )}

            {/* JSON Response */}
            <pre className="bg-gray-900 text-green-400 p-4 rounded-lg font-mono text-sm overflow-x-auto">
              {JSON.stringify(apiResponse, null, 2)}
            </pre>
          </div>
        )}
      </div>
    </div>
  );
}
